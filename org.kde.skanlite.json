{
    "id": "org.kde.skanlite",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "skanlite",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "finish-args": [
        "--device=all",
        "--env=SANE_CONFIG_DIR=/var/config/sane.d:",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.Avahi"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "avahi",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-gtk",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-qt5",
                "--disable-mono",
                "--disable-monodoc",
                "--with-distro=none",
                "--disable-pygobject",
                "--disable-python-dbus",
                "--disable-python",
                "--disable-manpages",
                "--disable-libdaemon",
                "--disable-daemon",
                "--enable-compat-libdns_sd",
                "--disable-libevent"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lathiat/avahi/releases/download/v0.8/avahi-0.8.tar.gz",
                    "sha256": "060309d7a333d38d951bc27598c677af1796934dbd98e1024e7ad8de798fedda"
                }
            ]
        },
        {
            "name": "sane",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-usb",
                "--with-v4l",
                "--with-gphoto2",
                "--enable-pthread",
                "--enable-pnm-backend",
                "--enable-pthread",
                "--enable-avahi"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sane-project/backends",
                    "tag": "1.1.1"
                }
            ]
        },
        {
            "name": "ksanecore",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.3/src/ksanecore-24.12.3.tar.xz",
                    "sha256": "9357c5e3db759241b12ebdc4586cad4a132627d23a15cbe0844f8943c31ae419",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ksanecore-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.3/src/libksane-24.12.3.tar.xz",
                    "sha256": "bcbc7ec1ccd96a8f24d77708f8a28859ff7089e4e5f84b7ba15201cc885b0cac",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libksane-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "sane-airscan",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/0.99.34.tar.gz",
                    "sha256": "da159fb231ee92bb5381620a43730f1fd7f78557b0eecee8d2eb848cafd90c43",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 121086,
                        "stable-only": true,
                        "url-template": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "skanlite",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.12.3/src/skanlite-24.12.3.tar.xz",
                    "sha256": "45de753338ba358d3298af0b89e1c1f089c0096c3748f3fbe1050c43baf55834",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/skanlite-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
