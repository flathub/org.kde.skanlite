                    "sha256": "86c35995a5c8550dd612f379361baee06e4fb218d3d788cc40cead1aeeba6406",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/skanlite-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
