{
    "id": "org.kde.skanlite",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "skanlite",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "finish-args": [
        "--device=all",
        "--env=SANE_CONFIG_DIR=/var/config/sane.d:",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.Avahi"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "avahi",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-gtk",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-qt5",
                "--disable-mono",
                "--disable-monodoc",
                "--with-distro=none",
                "--disable-pygobject",
                "--disable-python-dbus",
                "--disable-python",
                "--disable-manpages",
                "--disable-libdaemon",
                "--disable-daemon",
                "--enable-compat-libdns_sd",
                "--disable-libevent"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lathiat/avahi/releases/download/v0.8/avahi-0.8.tar.gz",
                    "sha256": "060309d7a333d38d951bc27598c677af1796934dbd98e1024e7ad8de798fedda"
                }
            ]
        },
        {
            "name": "sane",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-usb",
                "--with-v4l",
                "--with-gphoto2",
                "--enable-pthread",
                "--enable-pnm-backend",
                "--enable-pthread",
                "--enable-avahi"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sane-project/backends",
                    "tag": "1.1.1"
                }
            ]
        },
        {
            "name": "ksanecore",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/ksanecore-24.08.1.tar.xz",
                    "sha256": "a9eee4f76e429a7cdb868c90155ad9b1ac013405d8569ecfa5715c212bcdfd4a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ksanecore-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/libksane-24.08.1.tar.xz",
                    "sha256": "e3e703b4efa336b74a5309fd58932052b83c2a1e39ff1e8a90b5cf7cb9ba326e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libksane-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "sane-airscan",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/0.99.29.tar.gz",
                    "sha256": "e8aa43005ed495fc0db65e2ff51b29cef11a45fc6d8c385294b3394b848db65f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 121086,
                        "stable-only": true,
                        "url-template": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "skanlite",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.1/src/skanlite-24.08.1.tar.xz",
                    "sha256": "06d26840a89f9ab0a3e56318562312f23769a5bec40713901ba5d6c6e5b40f13",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/skanlite-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
