{
    "id": "org.kde.skanlite",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "skanlite",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "finish-args": [
        "--device=all",
        "--env=SANE_CONFIG_DIR=/var/config/sane.d:",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.Avahi"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "avahi",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-gtk",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-qt5",
                "--disable-mono",
                "--disable-monodoc",
                "--with-distro=none",
                "--disable-pygobject",
                "--disable-python-dbus",
                "--disable-python",
                "--disable-manpages",
                "--disable-libdaemon",
                "--disable-daemon",
                "--enable-compat-libdns_sd",
                "--disable-libevent"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lathiat/avahi/releases/download/v0.8/avahi-0.8.tar.gz",
                    "sha256": "060309d7a333d38d951bc27598c677af1796934dbd98e1024e7ad8de798fedda",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 147,
                        "url-template": "https://github.com/lathiat/avahi/releases/download/v$version/avahi-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "sane",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-usb",
                "--with-v4l",
                "--with-gphoto2",
                "--enable-pthread",
                "--enable-pnm-backend",
                "--enable-pthread",
                "--enable-avahi"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/sane-project/backends/-/archive/1.4.0/backends-1.4.0.tar.gz",
                    "sha256": "9c50ee76e35d98d7ae0cbb97d4c2a3c15663a78fdd74b0ed2bf2fe8e1a73f63a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4760,
                        "url-template": "https://gitlab.com/sane-project/backends/-/archive/$version/backends-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "ksanecore",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.1/src/ksanecore-25.08.1.tar.xz",
                    "sha256": "efcbbd6ee797aee03c7d9622a150f0b4ee645f7d0856d379c2495eb25e0697c6",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ksanecore-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.1/src/libksane-25.08.1.tar.xz",
                    "sha256": "ad4024e3bb5a2e975c48945d825c89e37f94f7fefd40b0db53c0d5d62dfdcc7a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/libksane-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "sane-airscan",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/0.99.36.tar.gz",
                    "sha256": "43d3436c0199496ee18aca4f875fe3926a40a0fae781bc280cdb96f7b5068ac0",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 121086,
                        "stable-only": true,
                        "url-template": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "skanlite",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.1/src/skanlite-25.08.1.tar.xz",
                    "sha256": "8bece39f2d7eab4f9fb8aeaeefbd630c2ae7ce25bb6b63fa8f4f15d23dfd9c6c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/skanlite-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
