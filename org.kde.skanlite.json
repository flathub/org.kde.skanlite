{
    "id": "org.kde.skanlite",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "skanlite",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/man"
    ],
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--system-talk-name=org.freedesktop.Avahi",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "avahi",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-gtk",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-mono",
                "--disable-monodoc",
                "--with-distro=none",
                "--disable-pygobject",
                "--disable-python-dbus",
                "--disable-python",
                "--disable-manpages",
                "--disable-libdaemon",
                "--disable-daemon",
                "--enable-compat-libdns_sd",
                "--disable-libevent"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lathiat/avahi/releases/download/v0.8/avahi-0.8.tar.gz",
                    "sha256": "060309d7a333d38d951bc27598c677af1796934dbd98e1024e7ad8de798fedda"
                }
            ]
        },
        {
            "name": "sane",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-usb",
                "--with-v4l",
                "--with-gphoto2",
                "--enable-pthread",
                "--enable-pnm-backend",
                "--enable-pthread",
                "--enable-avahi"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/sane-project/backends",
                    "tag": "1.1.1"
                }
            ]
        },
        {
            "name": "libksane",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.3/src/libksane-21.12.3.tar.xz",
                    "sha256": "ef8b823a11de933023061641627ab94b802d745ce5310c97469840ed09122232"
                }
            ]
        },
        {
            "name": "sane-airscan",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/0.99.27.tar.gz",
                    "sha256": "0d84ca10f9e80d8f5f6bc0f30911660667b6d5b9df8d3fd45be0dcc29775aa84",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 121086,
                        "stable-only": true,
                        "url-template": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "skanlite",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "cp /app/share/icons/hicolor/48x48/apps/org.kde.skanlite.svg /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.3/src/skanlite-21.12.3.tar.xz",
                    "sha256": "77e09cee9f57e8bda4905d358ecf296528df8ad73c93f722c6ec689d65abbc19"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}
