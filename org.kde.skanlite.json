                    "sha256": "525287bb903868be75b9630b34c11ae5fd6ce05be13fc616da30315e520d46cd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/skanlite-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
